# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.Application.dashboard
GET     /charts/flot                  controllers.Application.flotCharts
GET     /charts/morris                controllers.Application.morrisCharts
GET     /tables                       controllers.Application.tables
GET     /forms                        controllers.Application.forms
GET     /ui-elements/panels-and-wells controllers.Application.panelsAndWells
GET     /ui-elements/buttons          controllers.Application.buttons
GET     /ui-elements/notifications    controllers.Application.notifications
GET     /ui-elements/typography       controllers.Application.typography
GET     /ui-elements/icons            controllers.Application.icons
GET     /ui-elements/grid             controllers.Application.grid

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
